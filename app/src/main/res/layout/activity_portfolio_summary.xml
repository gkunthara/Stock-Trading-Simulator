<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1">


    <GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        >

        <TextView
            android:text="Your Portfolio Summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="3"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:textColor="@android:color/black"

            />


        <TextView
            android:id="@+id/netWorth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:layout_marginStart="18dp"
            android:text="Net Worth:"
            android:textSize="25sp"
            android:textColor="@android:color/black"

            />

        <TextView
            android:id="@+id/netWorthAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_marginEnd="18dp"
            android:gravity="end"
            android:text="$0.00"
            android:textSize="25sp"
            android:textColor="@android:color/black"

            />


        <TextView
            android:id="@+id/cashHoldings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_marginStart="18sp"
            android:layout_marginTop="18dp"
            android:text="Cash Holdings:"
            android:textSize="25sp"
            android:textColor="@android:color/black"

            />

        <TextView
            android:id="@+id/cashHoldingsAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="18dp"
            android:gravity="end"
            android:text="$0.00"
            android:textSize="25sp"
            android:textColor="@android:color/black"

            />


        <TextView
            android:id="@+id/stockHoldings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginStart="18dp"
            android:gravity="end"
            android:text="Stock Holdings:"
            android:layout_columnSpan="2"
            android:textSize="25sp"
            android:textColor="@android:color/black"

            />


        <TextView
            android:id="@+id/stockHoldingsAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_marginEnd="18sp"
            android:layout_marginTop="18dp"
            android:checked="false"
            android:text="$0.00"
            android:gravity="end"
            android:textSize="25sp"
            android:textColor="@android:color/black"

            />

        <TextView
            android:id="@+id/dailyGrowth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_marginTop="18dp"
            android:layout_marginStart="18dp"
            android:layout_columnSpan="2"
            android:text="Daily Growth"
            android:textSize="25sp"
            android:textColor="@android:color/black"

            />


        <TextView
            android:id="@+id/dailyGrowthAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18sp"
            android:layout_marginTop="18dp"
            android:checked="false"
            android:text="0.00%"
            android:layout_gravity="fill_horizontal"
            android:gravity="end"
            android:textSize="25sp"
            android:textColor="@android:color/black"

            />


        <TextView
            android:id="@+id/careerGrowth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_marginTop="18dp"
            android:layout_marginStart="18dp"
            android:layout_columnSpan="2"
            android:gravity="start"
            android:text="Career Growth: "
            android:textSize="25sp"
            android:textColor="@android:color/black"

            />

        <TextView
            android:id="@+id/careerGrowthAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="18dp"
            android:gravity="end"
            android:text="0.00%"
            android:textSize="25sp"
            android:textColor="@android:color/black"

            />


    </GridLayout>


</ScrollView>
