<?xml version="1.0" encoding="utf-8"?>


<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="3"
    >


    <TextView
        android:id="@+id/ticker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:layout_marginStart="18dp"
        android:checked="false"
        android:text="Ticker"
        android:textSize="40sp"
        android:layout_marginTop="25dp"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/lastTrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LAST TRADE"
        android:layout_marginTop="25dp"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:textColor="@android:color/black"

        />


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:layout_gravity="fill_horizontal"
        android:text="STOCK NAME"
        android:textSize="33sp"
        android:layout_columnSpan="3"
        android:textColor="@android:color/black"

        />



    <TextView
        android:id="@+id/change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:layout_marginStart="18sp"
        android:layout_marginTop="18dp"
        android:text="CHANGE"
        android:textSize="22sp"
        android:textColor="@android:color/black"

        />

    <TextView
        android:id="@+id/dayChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="0.00"
        android:layout_gravity="center"

        android:textSize="22sp" />


    <TextView
        android:id="@+id/changePercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginStart="18dp"
        android:text="% CHANGE"
        android:layout_columnSpan="2"
        android:textSize="22sp"
        android:textColor="@android:color/black"

        />


    <TextView
        android:id="@+id/percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="%"
        android:layout_gravity="center"
        android:textSize="22sp"
        />

    <TextView
        android:id="@+id/marketCap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginStart="18dp"
        android:layout_columnSpan="2"
        android:text="MARKET CAP (B)"
        android:textSize="22sp"
        android:textColor="@android:color/black"

        />


    <TextView
        android:id="@+id/cap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="CAP"
        android:layout_gravity="center"
        android:textSize="22sp"
        android:textColor="@android:color/black"

        />


    <TextView
        android:id="@+id/sharesToBuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shares To Buy "
        android:layout_marginTop="18dp"
        android:layout_marginStart="18dp"
        android:layout_columnSpan="2"
        android:textSize="22sp"
        android:textColor="@android:color/black"

        />
    <TextView
        android:id="@+id/sharesToSell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shares To Sell "
        android:layout_gravity="center"

        android:layout_marginTop="18dp"
        android:textSize="22sp"
        android:textColor="@android:color/black"

        />

    <EditText
        android:id="@+id/numSharesToBuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_marginTop="18dp"
        android:layout_columnSpan="2"
        android:layout_gravity="center"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:inputType="number"

        />

    <EditText
        android:id="@+id/numSharesToSell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_marginTop="18dp"
        android:textSize="22sp"
        android:layout_gravity="center"
        android:textColor="@android:color/black"
        android:inputType="number"

        />

    <Button
        android:id="@+id/buyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:gravity="center"
        android:layout_marginTop="18dp"
        android:background="@android:color/holo_green_dark"
        android:onClick="buyShares"
        android:text="BUY"
        android:textColor="@android:color/white"
        android:textSize="25sp" />

    <Button
        android:id="@+id/sellButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_marginTop="18dp"
        android:background="@android:color/holo_red_dark"
        android:text="SELL"
        android:textColor="@android:color/white"
        android:onClick="sellShares"
        android:textSize="25sp" />



    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="18dp"
        android:layout_columnSpan="2"
        android:gravity="start"
        android:text="PRICE"
        android:textSize="25sp"
        android:textColor="@android:color/black"

        />

    <TextView
        android:id="@+id/totalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="18dp"
        android:gravity="end"
        android:text="0.00"
        android:textSize="25sp"
        android:textColor="@android:color/black"
        android:layout_gravity="center"


        />


</GridLayout>

